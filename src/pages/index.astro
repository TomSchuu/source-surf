---
import '../styles/global.css';
import Card from '../components/Card.astro';
import Map from '../components/Map.astro';
import StartButton from '../components/StartButton.astro';
import { Icon } from 'astro-icon/components';

const primaryBackground = 'rgb(26, 26, 26)';
const secondaryBackground = 'rgb(42, 42, 42)';
const primaryAccent = 'rgba(0, 255, 0, 0.5)';
const textColor = 'rgb(242, 240, 230)';

// Ideas:
// - Border is a rainbow loading bar that goes around when server is starting up, and green when online, red when offline
// - Pulsing animation on the container when loading
// - Map selector passed in query param
// - Password input field that is required to start the server, passed to api
---
<style define:vars={{ primaryBackground, secondaryBackground, primaryAccent, textColor }}>
	body {
		background-color: var(--primaryBackground);
		color: var(--textColor);
		display: grid;
		place-items: center;
	}

	.main-container {
		background-color: var(--secondaryBackground);
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		padding: 1rem 2rem 1rem 2rem;
		width: 350px;
		height: 450px;	
		border-radius: 10px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
	}

	.main-container.loading {
		box-shadow: 0px 0px 9px 4px #747DE8;
    animation: glow 1.5s linear infinite alternate;
	}

	.header {
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		width: 100%;
		border-bottom: 1px solid var(--primaryColor);
		line-height: 0.5;
	}

	.connect-icon {
		display: none;
		animation: pulse 6s infinite;
		margin-left: 0.5rem;
	}

	.connect-icon:hover {
		color: var(--primaryAccent);
		transition: color 0.3s ease;
	}

	.card-display {
		display: flex;
		flex-direction: column;
		gap: 0.2rem;
		margin-bottom: 1rem;
		width: 100%;
	}

	.footer {
		font-size: 0.8rem;
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		color: rgb(162, 162, 162);
		height: 50px;
	}

	@keyframes pulse {
			0% {
				transform: scale(1);
			}
			50% {
				transform: scale(1.25);
			}
			100% {
				transform: scale(1);
			}
		}

	@keyframes glow {
    to {
        box-shadow: 0px 0px 15px 10px #535FED;
    }
	}
</style>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Source Surf</title>
	</head>
	<body>
		<main class="main-container loading" data-main-container>
			<header class="header">
				<h2>Fancy Surf</h2>
				<Icon data-connect class="connect-icon" name="mdi:play-circle" size={28} />
			</header>
			<Map />
			<section class="card-display">
				<Card title="Status" icon="mdi:access-point" />
				<Card title="Players" icon="mdi:account" />
				<Card title="Uptime" icon="mdi:clock" />
			</section>
			<StartButton/>
			<footer class="footer">Powered by&nbsp;<a href="https://github.com/tomschuu/source-surf">Source Surf</a></footer>
		</main>
	</body>
</html>
<script src="../scripts/main.ts"/>
	
